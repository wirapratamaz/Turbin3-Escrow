{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["tests/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist"]
} 