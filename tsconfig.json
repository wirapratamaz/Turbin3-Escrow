{
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "target": "es2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "dist/*"]
    }
  },
  "include": ["tests/**/*", "src/**/*", "*.d.ts", "dist/js-client/**/*"],
  "exclude": ["node_modules", "dist/test"]
} 